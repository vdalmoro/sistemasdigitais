#include <stdio.h>

int main ()
{

    int i, j, NUM;
    scanf("%d", &NUM);

    for ( i = 1; i <= NUM; i++ ) {
        printf("\n");

        for ( j = 1; j <= i; j++ )
            printf("*");

    }

    printf("\n");

    for ( i = NUM; i >= 1; i-- ) {
        printf("\n");

        for ( j = 0; j < (NUM - i); j++ )
            printf(" ");

        for ( j = 1; j <= i; j++ )
            printf("*");

    }

    return 0;
}
